.header
    .header__nav.header__desktop
        display: none
    .header__nav.header__mobile
        margin: 50px 30px
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        .header__logo
            height: 30px
        .header__menuIcon
            height: 15px
    .hero
        display: grid
        margin-top: 100px
        .hero__header
            position relative
            grid-row-start: row-start 1
            .header__bubble
                right: 0
                top: 60px
                height: 210px
                width: 290px
            .hero__image
                margin: 0px 10px
        .hero__content
            grid-row-start: row-start 2
            margin-top: 60px
            display: flex
            flex-direction: column
            gap: 30px
            text-align: center
            .hero__title
                padding: 0px 50px
                //width: 450px
            .hero__description
                padding: 0px 50px
                //width 480px
            .hero__buttons
                padding: 0px 30px
                display: flex
                flex-direction: row
                justify-content: center
                gap: 10px//30px

