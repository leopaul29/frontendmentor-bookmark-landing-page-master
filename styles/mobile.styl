.header
    .header__nav.header__desktop
        display: none
    .header__nav.header__mobile
        margin: 50px 40px
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        .header__logo
            height: 30px
        .header__menuIcon
            height: 15px
    .hero
        display: grid
        margin-top: 100px
        .hero__image
            position relative
            grid-row-start: row-start 1
            .header__bubble
                right: 0
                top: 60px
                height: 220px;
                width: 300px;
        .hero__content
            grid-row-start: row-start 2
            margin-top: 50px
            display: flex
            flex-direction: column
            gap: 30px
            text-align: center
            .hero__title
                padding: 0px 50px
                //width: 450px
            .hero__description
                padding: 0px 50px
                //width 480px
            .hero__buttons
                padding: 0px 30px
                display: flex
                flex-direction: row
                justify-content: center
                gap: 10px//30px

.main
    .section
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        gap: 50px
        .section__header
            text-align: center
            margin-bottom: 30px
            .section__title
                //margin-bottom: 20px
            .section__description
                padding: 10px 50px
                //width: 550px
    .section__features
        margin-top: 150px
        margin-bottom: 300px
        .features-tabs
            .features-tabs__list
                display: flex
                flex-direction: row
                justify-content: center
                margin-bottom: 80px
                .features-tabs__item
                    width 250px
                    height: 50px
                    text-align: center
                    border-bottom: 1px solid color-light-gray
                    .tabs__link
                        display: inline-block
                        width 100%
                        height 100%
                        font-weight: 500
                        color color-grayish-blue
                        &[aria-selected='true']
                            color: color-very-dark-blue
                            width: 250px
                            border-bottom: 5px solid color-soft-red
                        &:hover
                            color: color-soft-red
            .features-tab__container
                display: flex
                flex-direction: row
                justify-content: space-around
                align-items: center;
                gap: 100px
                .features-tab__image
                    position relative
                    .bubble    
                        right: 150px;
                        bottom: -100px;
                        transform: rotate(180deg);
                        width: 650px;
                    img
                        width 600px
                .features-tab__content
                    display: flex
                    flex-direction: column
                    gap: 30px
                    .features-tab__description
                        max-width: 450px
                    .features-tab__button
                        width 150px