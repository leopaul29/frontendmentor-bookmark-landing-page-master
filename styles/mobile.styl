    .section__extension
        //margin-top: 150px
    .section__faq
        //margin-top: 150px
        .accordion
            margin-bottom: 50px
        .accordion__buttonzone
            text-align: center;
            .accordion__button
                padding: 15px 20px;
    .section__contact
        background-color: color-soft-blue
        padding: 50px 0px 10px 0px;
        .contact__joined
            text-transform: uppercase
            letter-spacing: 3px;
            font-size: 12px;
            color: color-white 
        .contact__title
            margin-top 10px
            color: color-white 
        .contact__form
            text-align: center
            padding: 0px 40px
            margin-bottom 30px
            .form__email
                margin-bottom 15px
            .form__input, .form__submit
                width: 100%
            .form__input
                font-size: max(16px, 1em);
                padding: 1em;
                border-radius: 10px;
                border: 0px
                height: 50px;
