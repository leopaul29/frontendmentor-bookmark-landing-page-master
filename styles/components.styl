            height: 1px
            width: 100%;
            background-image: linear-gradient(to right, #000 10%, rgba(255, 255, 255, 0) 0%);
            background-position: top;
            background-size: 12px 3px;
            background-repeat: repeat-x;
        .extension-card__footer
            padding: 20px
            .extension-card__button                
                width: 100%;
    .extension-card-chrome
        margin-bottom: 50px
    .extension-card-firefox
        margin-top: 25px
        margin-bottom: 25px
    .extension-card-opera
        margin-top: 50px

// accordion
.accordion
    // display: flex
    // flex-direction: column
    // align-items: center
    padding: 0px 40px
    gap: 50px
    .accordion-block-list
        //width: 600px
        //border-top: 2px solid color-light-gray
        .accordion-block
            border-bottom: 2px solid color-light-gray
            .accordion-block__question
                cursor pointer
                padding: 18px 0px
                display: flex
                flex-direction: row
                align-items: center
                justify-content: space-between
                .accordion-block__question-text
                    color: color-very-dark-blue
                    //margin-right: 12px;
                .accordion-block__question-arrow
                    height: 12px
                    .accordions__link
                        height: 100%
                        width: 18px
                        display: block
                        background-repeat: no-repeat
                        transition: .3s transform;
                    .accordions__link--no-selected
                        background-image: url("../images/icon-arrow.svg")
                    .accordions__link--selected
                        background-image: url("../images/icon-arrow-selected.svg")
                        transform: rotate(180deg);
                    //margin-right: 12px
            .accordion-block__answer
                display: none;
                line-height: 25px
                margin: 10px 15px 30px 0px

