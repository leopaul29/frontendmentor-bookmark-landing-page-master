.extensions-card-list
    padding: 0px 50px;
    //display: flex
    //flex-direction: row
    //gap: 30px
    .extension-card
        // display: flex
        // flex-direction: column
        // align-items: center;
        border-radius: 10px
        box-shadow: 5px 5px 5px 5px rgba(0, 0, 0, 0.1)
        .extension-card__content
            display: flex
            flex-direction: column
            align-items: center
            padding: 10px
            //border-bottom: 1px color-grayish-blue dotted
            .extension-card__image
                //width: 100px
                margin: 30px 0px
            .extension-card__title
