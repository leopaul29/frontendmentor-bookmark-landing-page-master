// Variables
// -- width screen
width-mobile = 375px
width-desktop = 1440px

// -- colors
color-soft-blue = hsl(231, 69%, 60%)
color-soft-red = hsl(0, 94%, 66%)
color-grayish-blue = hsl(229, 8%, 60%)
color-very-dark-blue = hsl(229, 31%, 21%)
color-light-gray = hsl(230, 29%, 95%)
color-white = hsl(0, 0%, 100%)

// -- font
font-size = 18px
@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500&display=swap');

// reset
* {
    margin: 0
    padding: 0    
    font-family: 'Rubik', sans-serif;
    font-size font-size
    color: color-grayish-blue
}
ul
    list-style: none
a
    text-decoration: none

// components
.btn
    padding: 15px 30px
    background-color: color-light-gray
    color: color-white
    border: none
    border-radius: 5px
    font-weight: 500
    font-size 16px
    &:hover
        cursor pointer
.btn_action
    background-color: color-soft-red
.btn_primary
    background-color: color-soft-blue
.btn_secondary
    background-color: color-light-gray
    color: color-very-dark-blue
h1
    font-size: 46px
    color: color-very-dark-blue
    font-weight: 500
h2
    font-size: 28px
    color: color-very-dark-blue
    font-weight: 500
h3
    font-size: 24px
    color: color-very-dark-blue
    font-weight: 500
p
    line-height: 28px
.bubble
    position absolute
    z-index -1
    height: 450px;
    width: 700px;
    background-color: color-soft-blue;
    border-radius: 0% 0% 0% 30%

// DOM
body
    max-width width-desktop
    margin auto

.header
    padding-top: 50px
    padding-bottom: 100px
    .header__nav
        height: 50px
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        .header__logo
            height: 35px
        .nav__menu
            display: flex
            flex-direction: row
            align-items:  center
            gap: 60px
            padding-right: 150px
            .menu__link
                color: color-very-dark-blue
                text-transform: uppercase
                letter-spacing: 2px;
            .menu__link-action
                color: color-white
                padding: 15px 50px
    .hero
        padding-top: 150px
        display: flex
        flex-direction: row
        align-items:  center
        justify-content: space-between
        .hero__content
            display: flex
            flex-direction: column
            gap: 30px
            .hero__title
                width: 450px
            .hero__description
                width 480px
            .hero__buttons
                display: flex
                flex-direction: row
                gap: 30px
        .hero__image
            position relative
            .bubble    
                right: -70px;
                bottom: -20px;
            img
                width 900px

